# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'SwiftUIAmplifyDemo' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for SwiftUIAmplifyDemo
  pod 'AWSMobileClient', '~> 2.12.1'      # Required dependency
  pod 'AWSAuthUI', '~> 2.12.1'            # Optional dependency required to use drop-in UI
  pod 'AWSUserPoolsSignIn', '~> 2.12.1'   # Optional dependency required to use drop-in UI

  # Login with FB and Amplify/Cognito
  pod 'AWSFacebookSignIn', '~> 2.12.1'
  
  # Login with Google and Amplify/Cognito 
  pod 'AWSGoogleSignIn', '~> 2.12.1'
  pod 'GoogleSignIn', '~> 4.0'
  
end
